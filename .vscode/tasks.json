{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ run on sample input",
            "command": "/usr/local/bin/g++-8 -std=c++14 ${file} -o a.out && ./a.out < sample.txt && pbcopy < ${file}",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "runOptions": {
                "reevaluateOnRerun": false
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "ghc run on sample input",
            "command": "ghc"
        }
    ]
}